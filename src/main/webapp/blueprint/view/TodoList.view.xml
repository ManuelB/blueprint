<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	controllerName="blueprint.controller.TodoList">
	<Page title="Todo">
		<subHeader>
			<OverflowToolbar>
				<SearchField liveChange="onSearch" width="100%" />
			</OverflowToolbar>
		</subHeader>
		<List items="{/Todos}" itemPress="onItemPress" mode="MultiSelect"
			growing="true" growingScrollToLoad="true" id="list">
			<StandardListItem title="{Note}" description="{Id}"
				type="Navigation" />
		</List>
		<footer>
			<Toolbar>
				<Button icon="sap-icon://delete" press="onDelete" />
				<ToolbarSpacer />
				<Button icon="sap-icon://refresh" press="onRefresh" />
				<ToolbarSpacer />
				<Button icon="sap-icon://add" press="onAdd" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View>