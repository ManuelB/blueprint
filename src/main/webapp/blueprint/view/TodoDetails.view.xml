<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form"
	controllerName="blueprint.controller.TodoDetails">
	<Page title="Todo Details" showNavButton="true" navButtonPress="onNavButtonPress">
		<f:SimpleForm id="SimpleFormToolbar" editable="true"
			layout="ResponsiveGridLayout">
			<f:content>
				<Label text="Id" />
				<Label text="{Id}" />
				<Label text="Note" />
				<Input value="{Note}" />
			</f:content>
		</f:SimpleForm>
		<footer>
			<Toolbar>
				<ToolbarSpacer />
				<Button text="Save" press="onSave" />
			</Toolbar>
		</footer>
	</Page>
</mvc:View>